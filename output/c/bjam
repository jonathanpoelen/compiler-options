          flags +=
            <cflags>"-fdiagnostics-generate-patch"
          ;
        }
      }
      else if ( $(x_diagnostics_format) = "print-source-range-info" )
      {
        if $(toolset) = "clang"
        {
          flags +=
            <cflags>"-fdiagnostics-print-source-range-info"
          ;
        }
      }
    }
    if ( $(x_warnings_as_error) != "default" )
    {
      if ( $(x_warnings_as_error) = "on" )
      {
        flags +=
          <cflags>"-Werror"
        ;
      }
      else if ( $(x_warnings_as_error) = "basic" )
      {
        flags +=
          <cflags>"-Werror=non-virtual-dtor"
          <cflags>"-Werror=return-type"
          <cflags>"-Werror=init-self"
        ;
        if (  $(toolset) = "gcc" && ! (  $(version) < "05.01"  )  )
        {
          flags +=
            <cflags>"-Werror=array-bounds"
            <cflags>"-Werror=logical-op"
            <cflags>"-Werror=logical-not-parentheses"
          ;
        }
        else if $(toolset) = "clang"
        {
          flags +=
            <cflags>"-Werror=array-bounds"
            <cflags>"-Werror=division-by-zero"
          ;
          if ! (  $(version) < "03.04"  )
          {
            flags +=
              <cflags>"-Werror=logical-not-parentheses"
            ;
            if ! (  $(version) < "03.06"  )
            {
              flags +=
                <cflags>"-Werror=delete-incomplete"
              ;
              if ! (  $(version) < "07.00"  )
              {
                flags +=
                  <cflags>"-Werror=dynamic-class-memaccess"
                ;
              }
            }
          }
        }
      }
      else
      {
        flags +=
          <cflags>"-Wno-error"
        ;
      }
    }
  }
  else if $(toolset) = "msvc"
  {
    if ( $(x_stl_fix) != "default" )
    {
      if ( $(x_stl_fix) = "on" )
      {
        flags +=
          <cflags>"/DNOMINMAX"
        ;
      }
    }
    if ( $(x_debug) != "default" )
    {
      if ( $(x_debug) = "off" )
      {
        flags +=
          <cflags>"/DEBUG:NONE"
        ;
      }
      else
      {
        flags +=
          <cflags>"/RTC1"
          <cflags>"/Od"
        ;
        if ( $(x_debug) = "on" )
        {
          flags +=
            <cflags>"/DEBUG"
          ;
        }
        else if ( $(x_debug) = "line-tables-only" )
        {
          flags +=
            <cflags>"/DEBUG:FASTLINK"
          ;
        }
        if ( $(x_optimization) != "default" )
        {
          if ( $(x_optimization) = "g" )
          {
            flags +=
              <cflags>"/Zi"
            ;
          }
          else
          {
            flags +=
              <cflags>"/ZI"
            ;
          }
        }
        else
        {
          flags +=
            <cflags>"/ZI"
          ;
        }
      }
    }
    if ( $(x_exceptions) != "default" )
    {
      if ( $(x_exceptions) = "on" )
      {
        flags +=
          <cflags>"/EHc"
        ;
      }
      else
      {
        flags +=
          <cflags>"/EHc-"
        ;
      }
    }
    if ( $(x_optimization) != "default" )
    {
      if ( $(x_optimization) = "0" )
      {
        flags +=
          <cflags>"/Ob0 /Od /Oi- /Oy-"
        ;
      }
      else if ( $(x_optimization) = "g" )
      {
        flags +=
          <cflags>"/Ob1"
        ;
      }
      else
      {
        flags +=
          <cflags>"/DNDEBUG"
        ;
        if ( $(x_optimization) = "1" )
        {
          flags +=
            <cflags>"/01"
          ;
        }
        else if ( $(x_optimization) = "2" )
        {
          flags +=
            <cflags>"/O2"
            <linkflags>"/OPT:REF"
          ;
        }
        else if ( $(x_optimization) = "3" )
        {
          flags +=
            <cflags>"/O2"
            <linkflags>"/OPT:REF"
          ;
        }
        else if ( $(x_optimization) = "size" )
        {
          flags +=
            <cflags>"/O1"
            <cflags>"/Gw"
            <linkflags>"/OPT:REF"
          ;
        }
        else if ( $(x_optimization) = "fast" )
        {
          flags +=
            <cflags>"/O2"
            <cflags>"/fp:fast"
            <linkflags>"/OPT:REF"
          ;
        }
      }
    }
    if ( $(x_lto) != "default" )
    {
      if ( $(x_lto) = "off" )
      {
        flags +=
          <cflags>"/LTCG:OFF"
        ;
      }
      else
      {
        flags +=
          <cflags>"/GL"
          <linkflags>"/LTCG"
        ;
      }
    }
    if ( $(x_whole_program) != "default" )
    {
      if ( $(x_whole_program) = "off" )
      {
        flags +=
          <cflags>"/GL-"
        ;
      }
      else
      {
        flags +=
