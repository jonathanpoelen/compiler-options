          <cflags>"/Gw"
          <linkflags>"/LTCG"
        ;
      }
    }
    if ( $(x_pedantic) != "default" )
    {
      if ! ( $(x_pedantic) = "off" )
      {
        flags +=
          <cflags>"/permissive-"
        ;
      }
    }
    if ( $(x_rtti) != "default" )
    {
      if ( $(x_rtti) = "on" )
      {
        flags +=
          <cflags>"/GR"
        ;
      }
      else
      {
        flags +=
          <cflags>"/GR-"
        ;
      }
    }
    if ( $(x_stl_debug) != "default" )
    {
      if ( $(x_stl_debug) = "off" )
      {
        flags +=
          <cflags>"/D_HAS_ITERATOR_DEBUGGING=0"
        ;
      }
      else
      {
        flags +=
          <cflags>"/D_DEBUG"
          <cflags>"/D_HAS_ITERATOR_DEBUGGING=1"
        ;
      }
    }
    if ( $(x_control_flow) != "default" )
    {
      if ( $(x_control_flow) = "off" )
      {
        flags +=
          <cflags>"/guard:cf-"
        ;
      }
      else
      {
        flags +=
          <cflags>"/guard:cf"
        ;
      }
    }
    if ( $(x_sanitizers) != "default" )
    {
      if ( $(x_sanitizers) = "on" )
      {
        flags +=
          <cflags>"/sdl"
        ;
      }
      else
      {
        if ( $(x_stack_protector) != "default" )
        {
          if ! ( $(x_stack_protector) = "off" )
          {
            flags +=
              <cflags>"/sdl-"
            ;
          }
        }
      }
    }
    if ( $(x_stack_protector) != "default" )
    {
      if ! ( $(x_stack_protector) = "off" )
      {
        flags +=
          <cflags>"/GS"
          <cflags>"/sdl"
        ;
        if ( $(x_stack_protector) = "strong" )
        {
          flags +=
            <cflags>"/RTC1"
          ;
        }
        else if ( $(x_stack_protector) = "all" )
        {
          flags +=
            <cflags>"/RTC1"
            <cflags>"/RTCc"
          ;
        }
      }
    }
    if ( $(x_shadow_warnings) != "default" )
    {
      if ( $(x_shadow_warnings) = "off" )
      {
        flags +=
          <cflags>"/wd4456"
          <cflags>"/wd4459"
        ;
      }
      else if (  ( $(x_shadow_warnings) = "on" ) || ( $(x_shadow_warnings) = "all" )  )
      {
        flags +=
          <cflags>"/w4456"
          <cflags>"/w4459"
        ;
      }
      else if ( $(x_shadow_warnings) = "local" )
      {
        flags +=
          <cflags>"/w4456"
          <cflags>"/wd4459"
        ;
      }
    }
    if ( $(x_warnings) != "default" )
    {
      if ( $(x_warnings) = "on" )
      {
        flags +=
          <cflags>"/W4"
          <cflags>"/wd4244"
          <cflags>"/wd4245"
        ;
      }
      else if ( $(x_warnings) = "strict" )
      {
        flags +=
          <cflags>"/Wall"
          <cflags>"/wd4820"
          <cflags>"/wd4514"
          <cflags>"/wd4710"
        ;
      }
      else if ( $(x_warnings) = "very-strict" )
      {
        flags +=
          <cflags>"/Wall"
        ;
      }
      else if ( $(x_warnings) = "off" )
      {
        flags +=
          <cflags>"/W0"
        ;
      }
    }
    if ( $(x_warnings_as_error) != "default" )
    {
      if ( $(x_warnings_as_error) = "on" )
      {
        flags +=
          <cflags>"/WX"
          <linkflags>"/WX"
        ;
      }
      else if ( $(x_warnings_as_error) = "off" )
      {
        flags +=
          <cflags>"/WX-"
        ;
      }
    }
  }
  return $(flags) ;
}
